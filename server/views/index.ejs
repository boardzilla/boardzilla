<%- include('partials/header') %>

<h1>Games</h1>
<% if (sessions.length === 0) { %>
<p>You currently have no games running.</p>
<% } %>

<ul>
 <% sessions.forEach(session => { %>
   <li>
     <a href="/sessions/<%= session.id %>">
       <%=session.GameVersion.Game.name %>
     </a>
     <%=session.creator.name %> <%=session.lastState && session.lastState.phase %> <%=session.createdAt %>
   </li>
 <% }) %>
</ul>

<p><button onclick="window.location.href='/sessions/new';">Create new game</button></p>

<%- include('partials/footer') %>
